{
  "openapi": "3.0.3",
  "info": {
    "title": "Swagger Documantation by Ersaad 1.0",
    "description": "This is my description"
  },
  "security": [{ "bearerAuth": [] }],
  "tags": [
    { "name": "auth", "description": "This is for auth API" },
    { "name": "game", "description": "This is for game API" },
    { "name": "room", "description": "This is for room API" },
    { "name": "user", "description": "This is for user API" }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["auth"],
        "summary": "For login and get token",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/schema/loginBody"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/schema/loginResponse/success"
                }
              }
            }
          },
          "400": {
            "description": "Failed operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/schema/loginResponse/failed"
                }
              }
            }
          }
        }
      }
    },
    "/rooms": {
      "put": {
        "tags": ["room"],
        "summary": "Create rooms",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/schema/createRoomsBody"
            }
          }
        ],
        "requestBody": {}
      }
    },
    "/users/one": {
      "get": {
        "tags": ["user"],
        "summary": "Get one user",
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "required": true,
            "schema": {
              "username": { "type": "string", "example": "admin123" }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/schema/loginResponse/success"
                }
              }
            }
          },
          "400": {
            "description": "Failed operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/schema/loginResponse/failed"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "delete": {
        "tags": ["user"],
        "summary": "Delete one user",
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "required": true,
            "schema": {
              "username": { "type": "string", "example": "admin123" }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/schema/loginResponse/success"
                }
              }
            }
          },
          "400": {
            "description": "Failed operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/schema/loginResponse/failed"
                }
              }
            }
          }
        }
      }
    }
  },
  "schema": {
    "createRoomsBody": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "result": {
          "type": "string"
        },
        "main_player": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "loginBody": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "example": "admin123"
        },
        "password": {
          "type": "string",
          "example": "admin123"
        }
      }
    },
    "loginResponse": {
      "failed": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "Login Failed"
          },
          "msg": {
            "type": "string",
            "example": "Wrong Password"
          }
        }
      },
      "success": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "data": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "format": "int64",
                "example": 1
              },
              "username": {
                "type": "string",
                "example": "admin123"
              },
              "token": {
                "type": "string",
                "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6MSwidXNlcm5hbWUiOiJhZG1pbjEyMyIsImlhdCI6MTY3MzM1NDgyNH0.AWN6tOlnzleB5aHWnor5VqCnrSMsvsf_B7AZ3_E5Kcs"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "name": "Authorization",
        "type": "apiKey",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "in": "header"
      }
    }
  }
}
